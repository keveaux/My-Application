                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_toStartOf="@id/five_star_number_tv"
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="10dp" />

                                <TextView
