                                <TextView
                                    android:id="@+id/four_star_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_4"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />

                                <ProgressBar
                                    android:id="@+id/progressBar2"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/customprogressbar"
                                    android:progress="80"
                                    android:layout_toEndOf="@id/four_star_tv"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_toStartOf="@id/four_star_number_tv"
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="10dp" />

                                <TextView
                                    android:id="@+id/four_star_number_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_25"
                                    android:layout_marginLeft="@dimen/space10"
                                    android:layout_marginRight="@dimen/space10"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space10">
                                <TextView
                                    android:id="@+id/three_star_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_3"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />

                                <ProgressBar
                                    android:id="@+id/progressBar3"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/customprogressbar"
                                    android:progress="60"
                                    android:layout_toEndOf="@id/three_star_tv"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_toStartOf="@id/three_star_number_tv"
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="10dp" />

                                <TextView
                                    android:id="@+id/three_star_number_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_3"
                                    android:layout_marginLeft="@dimen/space10"
                                    android:layout_marginRight="@dimen/space10"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space10">
                                <TextView
                                    android:id="@+id/two_star_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_2"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />

                                <ProgressBar
                                    android:id="@+id/progressBar4"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/customprogressbar"
                                    android:progress="40"
                                    android:layout_toEndOf="@id/two_star_tv"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_toStartOf="@id/two_star_number_tv"
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="10dp" />

                                <TextView
                                    android:id="@+id/two_star_number_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_20"
                                    android:layout_marginLeft="@dimen/space10"
                                    android:layout_marginRight="@dimen/space10"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />
                            </RelativeLayout>



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space10">
                                <TextView
                                    android:id="@+id/one_star_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_1"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentStart="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />

                                <ProgressBar
                                    android:id="@+id/progressBar5"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/customprogressbar"
                                    android:progress="25"
                                    android:layout_toEndOf="@id/one_star_tv"
                                    android:layout_marginStart="@dimen/space10"
                                    android:layout_toStartOf="@id/one_star_number_tv"
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="10dp" />

                                <TextView
                                    android:id="@+id/one_star_number_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_25"
                                    android:layout_marginLeft="@dimen/space10"
                                    android:layout_marginRight="@dimen/space10"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    />
                            </RelativeLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/all_details_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:orientation="vertical"
                            android:layout_marginTop="50dp">



                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/location_icon"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_location_on_black_18dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="@dimen/space20"
                                        tools:ignore="ContentDescription" />

                                    <TextView
                                        android:id="@+id/location_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/location_txt"
                                        android:layout_toEndOf="@id/location_icon"
                                        android:layout_marginStart="@dimen/space10"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:layout_centerInParent="true"
                                        />

                                </RelativeLayout>
                                <TextView
                                    android:id="@+id/location_details_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/empty"
                                    android:layout_marginStart="46dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:maxLines="2"
                                    android:textColor="@color/grey"
                                    tools:ignore="SmallSp"
                                    android:layout_marginEnd="@dimen/space10"
                                    />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space10">
                                    <ImageView
                                        android:id="@+id/services_iv"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/service_product_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="@dimen/space20"
                                        tools:ignore="ContentDescription" />

                                    <TextView
                                        android:id="@+id/services_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/service_product"
                                        android:layout_toEndOf="@id/services_iv"
                                        android:layout_marginStart="@dimen/space10"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:layout_centerInParent="true"
                                        />

                                </RelativeLayout>
                                <TextView
                                    android:id="@+id/services_list_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/empty"
                                    android:layout_toEndOf="@id/location_icon"
                                    android:layout_marginStart="46dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:maxLines="2"
                                    android:textColor="@color/grey"
                                    android:layout_marginEnd="@dimen/space10"
                                    tools:ignore="ObsoleteLayoutParam,SmallSp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space10">

                                    <ImageView
                                        android:id="@+id/business_iv"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginStart="@dimen/space20"
                                        android:layout_marginBottom="0dp"
                                        android:src="@drawable/business_icon"
                                        tools:ignore="ContentDescription" />

                                    <TextView
                                        android:id="@+id/business_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/kind_of_business"
                                        android:layout_toEndOf="@id/business_iv"
                                        android:layout_marginStart="@dimen/space10"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:layout_centerInParent="true"
                                        />

                                </RelativeLayout>
                                <TextView
                                    android:id="@+id/kind_of_biz_details_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/empty"
                                    android:layout_toEndOf="@id/location_icon"
                                    android:layout_marginStart="46dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:maxLines="2"
                                    android:textColor="@color/grey"
                                    tools:ignore="ObsoleteLayoutParam,SmallSp"
                                    android:layout_marginEnd="@dimen/space10"
                                    />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/space10">
                                    <ImageView
                                        android:id="@+id/contact_iv"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/contact_info_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="@dimen/space20"
                                        android:contentDescription="@string/todo" />

                                    <TextView
                                        android:id="@+id/contact_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/contact_information"
                                        android:layout_toEndOf="@id/contact_iv"
                                        android:layout_marginStart="@dimen/space10"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:layout_centerInParent="true"
                                        />

                                </RelativeLayout>
                                <TextView
                                    android:id="@+id/phone_no_details_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pno_example"
                                    android:layout_marginStart="46dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:maxLines="2"
                                    android:textColor="@color/grey"
                                    android:layout_marginBottom="@dimen/space10"
                                    tools:ignore="SmallSp" />


                            </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="@dimen/space10"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:layout_gravity="center"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/overall_rating"
                                android:textSize="@dimen/size13"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/space20"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rating_example"
                                android:textSize="36sp"
                                android:textColor="@color/colorAccent"
                                android:layout_gravity="center"
                                android:textStyle="bold"/>

                            <RatingBar
                                android:id="@+id/rating_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:backgroundTint="@color/colorAccent"
                                android:numStars="5"
                                android:progressTint="@color/colorAccent"
                                android:rating="4"
                                android:secondaryProgressTint="@android:color/transparent"
                                android:stepSize="1"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_marginBottom="@dimen/space10"
                                android:layout_marginTop="@dimen/space10"
                                />

                            <com.google.android.material.button.MaterialButton
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:id="@+id/btn_show_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/space40"
                                android:text="@string/reviews_example"
                                android:textAllCaps="false"
                                android:textSize="10sp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="normal"
                                app:icon="@drawable/ic_rate_review_black_18dp"
                                android:layout_gravity="center"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/colorAccent"
                                app:cornerRadius="@dimen/space20"
                                android:gravity="center"
                                app:iconGravity="textStart"
                                tools:ignore="SmallSp" />

                        </LinearLayout>

