<?xml version="1.0" encoding="utf-8"?>
<com.ict_life.merchantapp.multipleimagepickerlibrary.views.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ict_life.merchantapp.multipleimagepickerlibrary.views.SquaredImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/default_error"/>

    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50ff000d"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="@dimen/space20"
        android:layout_height="@dimen/space20"
        android:layout_gravity="top|right"
        android:layout_marginRight="5.5dp"
        android:layout_marginTop="5.5dp"
        android:src="@drawable/btn_unselected"/>

</com.ict_life.merchantapp.multipleimagepickerlibrary.views.SquareFrameLayout>