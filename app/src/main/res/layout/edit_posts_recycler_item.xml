<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/space20"
    android:layout_marginLeft="@dimen/space10"
    android:layout_marginRight="@dimen/space10"
    android:layout_marginBottom="@dimen/space10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/edit_post_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mzuri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/space10"
        android:layout_margin="@dimen/space10"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/edit_post_iv"
        app:layout_constraintStart_toStartOf="@id/edit_post_iv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customize"
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_mode_edit_primary"
                android:layout_marginStart="@dimen/space5"
                android:layout_marginEnd="@dimen/space5"
                android:drawablePadding="@dimen/space5"
                android:textColor="@color/colorPrimary"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageButton
            android:id="@+id/remove_image_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_clear_white_18dp"
            android:tint="@color/colorPrimary"
            android:background="@null"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

